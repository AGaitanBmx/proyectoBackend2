<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Carrito</title>
    <style>
        /* Estilos generales */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        
        body {
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
            padding: 2rem 1rem;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }
        
        h1 {
            text-align: center;
            margin-bottom: 2rem;
            color: #2c3e50;
            font-weight: 600;
        }
        
        /* Estilos para la lista de productos */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .product-card {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .product-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-bottom: 1px solid #eee;
        }
        
        .product-info {
            padding: 1.2rem;
        }
        
        .product-title {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
            color: #2c3e50;
        }
        
        .product-detail {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 0.3rem;
        }
        
        /* Estilos para el total y botones */
        .cart-summary {
            background: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin-top: 2rem;
            text-align: center;
        }
        
        .total-price {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1.5rem;
        }
        
        .btn {
            display: inline-block;
            background: #4a90e2;
            color: white;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: background 0.3s ease;
            text-decoration: none;
        }
        
        .btn:hover {
            background: #3a7bc8;
        }
        
        .btn-delete {
            background: #e74c3c;
            margin-top: 0.8rem;
            width: 100%;
            padding: 0.5rem;
        }
        
        .btn-delete:hover {
            background: #c0392b;
        }
        
        .empty-cart {
            text-align: center;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }
        
        /* Estilos responsivos */
        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
        }
        
        @media (max-width: 480px) {
            .products-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Mi Carrito</h1>
        
        {{#if hasProducts}}
            <div class="products-grid">
                {{#each products}}
                    <div class="product-card">
                        <img src="{{this.thumbnail}}" alt="{{this.title}}" class="product-image">
                        <div class="product-info">
                            <h3 class="product-title">{{this.title}}</h3>
                            <p class="product-detail">Precio: ${{this.price}}</p>
                            <p class="product-detail">Cantidad: {{this.quantity}}</p>
                            <p class="product-detail">Subtotal: ${{this.subtotal}}</p>
                            <button onclick="deleteProduct('{{this.id}}')" class="btn btn-delete">Eliminar</button>
                        </div>
                    </div>
                {{/each}}
            </div>
            
            <div class="cart-summary">
                <h3 class="total-price">Total: ${{total}}</h3>
                <form id="purchaseForm">
                    <button type="submit" class="btn">Finalizar Compra</button>
                </form>
            </div>
        {{else}}
            <div class="empty-cart">
                <p>Tu carrito está vacío.</p>
                <a href="/" class="btn" style="margin-top: 1rem;">Explorar Productos</a>
            </div>
        {{/if}}
    </div>

<script>
async function deleteProduct(productId) {
  try {
    const res = await fetch(`/api/carts/{{user.cart}}/products/${productId}`, {
      method: 'DELETE'
    });
    
    const data = await res.json();
    
    if (!res.ok) {
      throw new Error(data.message || 'Error al eliminar producto');
    }

    alert(data.message); // Ahora mostrará el mensaje correcto
    location.reload();
    
  } catch (error) {
    console.error('Error:', error);
    alert(error.message || 'Error al eliminar producto');
  }
}

  document.getElementById('purchaseForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    try {
      const res = await fetch('/api/carts/{{user.cart}}/purchase', { 
        method: 'POST' 
      });
      
      if (!res.ok) throw new Error(await res.text());
      
      const data = await res.json();
      alert(data.message);
      if (data.message === 'Compra procesada') {
        window.location.href = "/";
      }
    } catch (error) {
      console.error('Error al procesar compra:', error);
      alert(error.message);
    }
  });
</script>